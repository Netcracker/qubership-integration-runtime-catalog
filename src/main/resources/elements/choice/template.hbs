<choice id="{{identifier}}">
    {{#children 'when' comparison-key-property='priorityNumber'}}
        <when>
            <simple>
                {{escape (property 'condition')}}
            </simple>
            <step id="{{identifier}}">
                <toD uri='direct:{{identifier}}'/>
            </step>
        </when>
    {{/children}}
    {{#children 'otherwise'}}
        <otherwise>
            <step id="{{identifier}}">
                <toD uri='direct:{{identifier}}'/>
            </step>
        </otherwise>
    {{/children}}
</choice>
